<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme overrides -->
    <style name="Theme.SmsForwarder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@android:color/black</item>
        
        <!-- Background colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Card colors -->
        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>
    </style>
    
    <!-- Dark card style -->
    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>

